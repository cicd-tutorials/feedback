server {
    set $api "${PROXY_PASS}";

    listen       80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        index  index.html index.htm;
    }

    location /static/ {
        rewrite ^/static/(.+) /$1 break;
        root /app/static/;
    }

    location /api {
        if ($api = "") {
            return 404;
        }

        rewrite ^/api/(.*) /$1 break;

        proxy_set_header Referer $http_referer;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_pass $api;
    }

    location /admin {
        if ($api = "") {
            return 404;
        }

        proxy_set_header Referer $http_referer;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_pass $api;
    }
}
